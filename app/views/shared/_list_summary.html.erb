    <div class="caption">
      <h3><%= link_to list.title, list %></h3>
      <p><%= truncate list.description, length: 120 %></p>
      <%= render partial: 'shared/tag_list', locals: { taggable: list } %>
      <p class="list-info muted">created <%= render partial: 'shared/timestamp', locals: { post: list } %></p>
      <p class="list-info"><%= gravatar_for list.user, size: 20 %> <%= link_to list.user.username, list.user %></p>
      <% if current_user?(list.user) %>
      <p class="list-info">
        <%= link_to "edit",   edit_list_path(list)  %>
        <%= link_to "delete", list,
                              method: :delete,
                              data: { confirm: "You sure?" },
                              title: list.title %>
      </p>
    <% end %>  
    </div>