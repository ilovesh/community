<li class="span6 list-item" id="list_<%= list.id %>">
  <div class="thumbnail">
    <%= render partial: 'shared/list_controll', locals: { list: list } %>
    <%= render partial: 'shared/list_image', locals: { list: list } %>
    <%= render partial: 'shared/list_summary', locals: { list: list } %>
  </div>

  <% if current_page?(list) %>
    <% if current_user?(list.user) %>
    <%= link_to "edit",   edit_list_path(list)  %>
    <%= link_to "delete", list, 
                method: :delete,
                data: { confirm: "You sure?" },
                title: list.title %>
    <% end %>

    <% if list.courses.any? %>
      <h3>Courses:</h3>
      <ul class="courses">
        <%= render partial: 'shared/course', collection: list.courses %>
      </ul>
    <% else %>
      <h3>No courses in this list</h3>
    <% end %>
  <% end %>
</li>
