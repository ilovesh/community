<li id="list_<%= list.id %>" class="span5">
  <%= link_to list, {class: "thumbnail"} do %>
    <div class="list-like">
      <i class="icon-star-empty icon-large"></i>
    </div>
    <%= image_tag(list.courses.sample.image_link, alt: "course image", class: "block .img-medium-large") %>
    <div><%= list.title %></div>
    <div class="pull-right">
      <span class="muted"><%= time_ago_in_words(list.created_at) %> ago</span> 
      <%= link_to list.user.username, list.user %>
    </div>
  <% end %>

  <% if current_page?(list) %>
    <% if current_user?(list.user) %>
    <%= link_to "edit",   edit_list_path(list)  %>
    <%= link_to "delete", list, 
                method: :delete,
                data: { confirm: "You sure?" },
                title: list.title %>
    <% end %>

    <% if list.courses.any? %>
      <h3>Courses:</h3>
      <ul class="courses">
        <%= render partial: 'shared/course', collection: list.courses %>
      </ul>
    <% else %>
      <h3>No courses in this list</h3>
    <% end %>
  <% end %>
</li>
