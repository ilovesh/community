<li id="list_<%= list.id %>" class="span5">
  <span class="list_title"><b><%= link_to list.title, list %></b></span>
<!--       <p class="list_desp">Description: <%= list.description %></p> -->
  <%= image_tag(list.courses.sample.image_link, alt: "course image", class: "block img-medium") %>
  <span class="list_info mute">created <%= time_ago_in_words(list.created_at) %> ago 
    <%= link_to list.user.username, list.user %>
  </span>
    <% if current_user?(list.user) %>
    <%= link_to "edit",   edit_list_path(list)  %>
    <%= link_to "delete", list, 
                method: :delete,
                data: { confirm: "You sure?" },
                title: list.title %>
  <% end %>

  <% if current_page?(list) %>
    <% if list.courses.any? %>
      <h3>Courses:</h3>
      <ul class="courses">
        <%= render partial: 'shared/course', collection: list.courses %>
      </ul>
    <% else %>
      <h3>No courses in this list</h3>
    <% end %>
  <% end %>
</li>
