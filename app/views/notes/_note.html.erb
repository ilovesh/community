<% unless current_page? note.course %>
<li class="note-item">
<% end %>

<% unless params[:action] == 'index' %>
<%= link_to note.course.full_name,  note.course %>
<% end %>

<div><%= time_ago_in_words(note.created_at) %> ago</div>
<div><%= link_to note.user.username, note.user %></div>
<% if current_user?(note.user) %>
<div>
  <%= link_to "edit", edit_note_path(note) %> 
  <%= link_to "delete", note, 
                        method: :delete,
                        data: { confirm: "Do you want to delete this note?" },
                        title: note.body %>
</div>
<% end %>
<% unless note.title.nil? %>
  <h3><%= note.title %></h3>             
<% end %>
<p><%= note.body %></p>

<% unless current_page? note.course %>
</li>
<% end %>