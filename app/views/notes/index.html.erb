<% provide(:title, 'Notes') %>
<% content_for :left do %>
  <div class="block go-back"><%= link_to "<< go back to the course page",  @course %></div>
  <h2 class="inline-header"><%= pluralize(@notes.count, 'note') %></h2>
  <div class="pull-right"><%= render 'btn_new_note' %></div>
  <div class="section-container">
    <div class="tabbable">
      <%= render 'tabs' %>
    </div>
    <div class="tab-content">
      <%= render 'tab_content' %>
    </div>
  </div> 
<% end %>

<% content_for :right do %>
  <%= render partial: 'courses/sidebar_course_item', locals: { course: @course } %>
<% end %>