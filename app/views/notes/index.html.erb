<% provide(:title, 'Notes') %>
<% content_for :left do %>
  <div class="block"><%= link_to "<< go back to course: " + @course.full_name,  @course %></div>
  <h2 class="inline-header"><%= pluralize(@notes.count, 'note') %></h2>
  <div class="pull-right"><%= render 'btn_new_note' %></div>
  <div class="section-container">
    <ul class="unstyled seperate">
      <%= render @notes %>
    </ul>
    <%= will_paginate @notes %>
  </div>  
<% end %>


<% content_for :right do %>
  <%= render partial: 'courses/sidebar_course_item', locals: { course: @course } %>
<% end %>