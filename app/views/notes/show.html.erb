<% provide(:title, 'Note') %>
<% content_for :left do %>
<h2>Note</h2>
<%= link_to @course.full_name,  @course %>
<div>created <%= time_ago_in_words(@note.created_at) %> ago</div>
<div>
  <% if current_user?(@note.user) %>
    <%= link_to "edit", edit_course_note_path(@course, @note) %> 
    <%= link_to "delete", [@course, @note], 
                        method: :delete,
                        data: { confirm: "Do you want to delete this note?" },
                        title: @note.body %>
  <% end %>
</div>
<% unless @note.title.nil? %>
  <h3><%= @note.title %></h3>             
<% end %>
<p><%= @note.body %></p>
<% end %>

<% content_for :right do %>
  place_holder
<% end %>
