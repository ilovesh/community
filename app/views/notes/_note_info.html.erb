<% if current_page? note.course %>
  <%= render partial: 'shared/small_gravatar', locals: { post: note } %>
<% else %>
  <%= render partial: 'shared/large_gravatar', locals: { post: note } %>  
<% end %>
<%= link_to note.user.username, note.user %>
<%= render partial: 'shared/timestamp', locals: { post: note } %>
<% if current_user?(note.user) %>
  <%= link_to "edit",   edit_note_path(note) %>
  <%= link_to "delete", note,
              method: :delete,
              data: { confirm: "Are you sure to delete this note?" },
              title: note.body %>
<% end %>