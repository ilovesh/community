<%= form_for(current_user.likes.find_by_likeable_type_and_likeable_id(
                                        likeable.class.name, likeable.id),
            remote: true, 
            html: { method: :delete }) do |f| %>
  <%= button_tag(type: 'submit', class: 'btn-like') do %>
    <i class="icon-<%=icon_name%> icon-large icon-like"></i>
  <% end %>
<% end %>
<% if likeable.class.name == "Discussion" || likeable.class.name == "Comment" || likeable.class.name == "List" %>
<div id="vote-count-<%=likeable.class.name.downcase%>-<%=likeable.id%>">
  <%= likeable.likes.count %>
</div>
<% end %>