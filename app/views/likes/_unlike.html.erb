<%= form_for(current_user.likes.find_by_likeable_type_and_likeable_id(
                                        likeable.class.name, likeable.id),
            remote: true, 
            html: { method: :delete }) do |f| %>
  <%= button_tag(type: 'submit', class: 'btn-like') do %>
    <% if icon_name == LIKED %>
      <i class="icon-<%=icon_name%> icon-liking"></i>
    <% elsif icon_name == VOTED %>
      <i class="icon-<%=icon_name%> icon-voting"></i>
    <% end %>
  <% end %>
<% end %>