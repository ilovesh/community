  <% if course.start_date && course.duration != 0 && course.duration != 99 %>
    <div id="start">
      <label>Classes Start: </label>
      <% if course.provider.name == "edX" %>
      <span><%= course.start_date.in_time_zone("Eastern Time (US & Canada)").to_date.to_formatted_s(:long_ordinal) %></span>
      <% else %>
      <span><%= course.start_date.in_time_zone("Pacific Time (US & Canada)").to_date.to_formatted_s(:long_ordinal) %></span>
      <% end %>
    </div>
  <% end %>