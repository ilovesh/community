  <% if course.final_date %>
    <div id="final">
      <label>Classes End: </label>
      <% if course.provider.name == "edX" %>
      <span><%= course.final_date.in_time_zone("Eastern Time (US & Canada)").to_date.to_formatted_s(:long_ordinal) %></span>
      <% else %>
      <span><%= course.final_date.in_time_zone("Pacific Time (US & Canada)").to_date.to_formatted_s(:long_ordinal) %></span>
      <% end %>
    </div>
  <% end %>