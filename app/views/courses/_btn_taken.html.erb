<div class="btn-row">
  <% if current_user %>
    <% if current_user.taken?(@course) %> 
      <a class="btn btn-small btn-enroll btn-danger" href="#taken" data-toggle="modal">Finished</a>
    <% else %>
      <a class="btn btn-small btn-enroll" href="#taken" data-toggle="modal">Finished</a>
    <% end %>
  <% else %>
    <%= link_to "Taken", enrollments_path, method: :post, class: "btn btn-small btn-enroll" %>
  <% end %>
  <%= render partial: 'shared/social_count', locals: { users: @course.taken_users } %>
</div>


