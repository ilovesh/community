<div class="btn-row">
  <% if current_user %>  
    <% if current_user.taking?(@course) %>  
      <a class="btn btn-small btn-enroll btn-success" href="#taking" data-toggle="modal">Taking</a>
    <% else %>
      <a class="btn btn-small btn-enroll" href="#taking" data-toggle="modal">Taking</a>
    <% end %>
  <% else %>
    <%= link_to "Taking", enrollments_path, method: :post, class: "btn btn-small btn-enroll" %>
  <% end %>
  <%= render partial: 'shared/social_count', locals: { users: @course.taking_users,
                                                       path: request.fullpath + '/taking' } %>
</div>