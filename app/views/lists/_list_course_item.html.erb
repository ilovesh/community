<li id="course-<%=course.id%>" class="list-course-item row-fluid">
  <div class="span3">
    <%= link_to( image_tag(course.image_link, class: "img-medium"), course) %>
  </div>
  <div class="span9">
    <%= render partial: 'courses/course_status', locals: {course: course} %>  
    <h5><%= link_to course.full_name, course %></h5>
    <div id="provider">
      <label>Provider: </label>
      <%= course.provider.name %>
    </div>
    <% if course.universities.any? %>
      <div id="university">
        <label>University: </label>
        <% if course.universities.size == 1 %>
        <span><%= course.universities.first.name %></span>
        <% else %>
        <ul class="unstyled">
          <% course.universities.each do |u| %>
            <li><%= u.name %></li>
          <% end %>
        </ul>
        <% end %>
      </div>
    <% end %>
    <% if course.instructor %>
      <div id="instructor">  
        <label>Course Staff: </label>
        <% if !course.instructor.include?('|') %>
          <span><%= course.instructor %></span>
        <% else %>
          <ul class="unstyled">
            <% course.instructor.split('|').each do |person| %>
              <li><%= person %></li>
            <% end %>
          </ul>
        <% end %>
      </div>
    <% end %>

    <% @listing = Listing.find_by_list_id_and_course_id(@list.id, course.id) %>
    <% comment = @listing.description %>
      <% unless comment.blank? %>
        <div class="list-course-comment">
          <label>Comment:</label>
          <p ><%= @listing.description %></p>
        </div>
      <% end %>
    <span class="muted">added <%= time_ago_in_words(@listing.created_at) %> ago</span>
    <span>
      <% if current_user?(@list.user) %>
        <a href="#edit-listing-<%= @listing.id %>" data-toggle="modal">edit</a>
        <%= link_to "delete", @list.listings.find_by_course_id(course.id),
                      method: :delete,
                      data: { confirm: "Are you sure to delete the course from this list?" },
                      title: course.full_name %>
      <% end %>
    </span>
  </div>
  <%= render partial: 'comment_modal', locals: { id: @listing.id } %>
</li>