    <div class="caption">
      <h3><%= link_to truncate(list.title, length: 80), list %></h3>
      <div class="pull-right list-info">
        <p class="label label-inverse"><%= pluralize(list.courses.count, "course") %></p>
        <p>by <%= link_to list.user.username, list.user %></p>
      </div>
      <% if current_user?(list.user) %>
      <p class="list-info">
        <%= link_to "edit",   edit_list_path(list)  %>
        <%= link_to "delete", list,
                              method: :delete,
                              data: { confirm: "You sure?" },
                              title: list.title %>
      </p>
    <% end %>  
    </div>