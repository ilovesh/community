<% provide(:title, 'All discussions') %>
<% content_for :left do %>
  <div class="index-title">
    <h2>All Discussions</h2>
    <%= link_to "<i class=\"icon-pencil icon-white\"></i> create a post".html_safe, 
                new_discussion_path, 
                class: "btn btn-medium btn-primary pull-right" %>
  </div>
  <div class="section-container">
    <div class="tabbable">
      <ul class="nav nav-tabs">
        <li class="active"><a href="#newest" data-toggle="tab">newest</a></li>
        <li><a href="#votes" data-toggle="tab">votes</a></li>
        <li><a href="#comments" data-toggle="tab">comments</a></li>
      </ul>
    </div>
    <div class="tab-content">
      <div class="tab-pane active" id="newest">
        <ul class="unstyled seperate">
          <%= render partial: 'discussions/discussion', collection: @newest %>
        </ul>
        <%= will_paginate @newest, param_name: 'newest_page' %>
      </div>
      <div class="tab-pane" id="votes">
        <ul class="unstyled seperate">
          <%= render partial: 'discussions/discussion', collection: @votes %>
        </ul>
        <%= will_paginate @votes, param_name: 'votes_page' %>
      </div>
      <div class="tab-pane" id="comments">
        <ul class="unstyled seperate">
          <%= render partial: 'discussions/discussion', collection: @comments %>
        </ul>
        <%= will_paginate @comments, param_name: 'comments_page' %>
      </div>             
    </div>
    <% end %>
  </div>

<% content_for :right do %>
  place_holder
<% end %>