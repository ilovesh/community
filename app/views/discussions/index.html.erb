<% provide(:title, 'All discussions') %>
<% content_for :left do %>
  <h2 class="inline-header">All Discussions</h2>
  <div class="pull-right"><%= render 'btn_new_discussion' %></div>
  <div class="section-container">
    <div class="tabbable">
      <%= render 'tabs' %>
    </div>
    <div class="tab-content">
      <%= render 'tab_content' %>
    </div>
  </div>
<% end %>

<% content_for :right do %>
  <h3 class="top-tags-header">Top tags:</h3>
  <ul class="unstyled top-tags-list">
    <%= render partial: 'discussions/filter_tag', collection: @tags, as: :tag %>
  </ul>
<% end %>