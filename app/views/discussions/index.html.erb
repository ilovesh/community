<% provide(:title, 'All discussions') %>
<% content_for :left do %>
  <h1>All discussions</h1>
  <%= link_to "create a post",  new_discussion_path %>
  <%= will_paginate @discussions %>
  <ul class="discussions">
    <%# Rails automatically looks for a partial called _post.html.erb  %>
    <%= render partial: 'shared/discussion', collection: @discussions %>
  </ul>
  <%= will_paginate @discussions %>
<% end %>

<% content_for :right do %>
  place_holder
<% end %>