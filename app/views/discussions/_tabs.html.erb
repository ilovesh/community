<ul class="nav nav-tabs">
  <% if @tag %>
    <% if params[:tab] == "votes" %>
      <li><a href="/discussions/tagged/<%=params[:tag]%>">newest</a></li>
      <li class="active"><a href="/discussions/tagged/<%=params[:tag]%>?tab=votes">votes</a></li>
      <li><a href="/discussions/tagged/<%=params[:tag]%>?tab=comments">comments</a></li>
    <% elsif params[:tab] == "comments" %>
      <li><a href="/discussions/tagged/<%=params[:tag]%>">newest</a></li>
      <li><a href="/discussions/tagged/<%=params[:tag]%>?tab=votes">votes</a></li>
      <li class="active"><a href="/discussions/tagged/<%=params[:tag]%>?tab=comments">comments</a></li>    
    <% else %>
      <li class="active"><a href="/discussions/tagged/<%=params[:tag]%>?">newest</a></li>
      <li><a href="/discussions/tagged/<%=params[:tag]%>?tab=votes">votes</a></li>
      <li><a href="/discussions/tagged/<%=params[:tag]%>?tab=comments">comments</a></li>
    <% end %>


  <% else %>
    <% if params[:tab] == "votes" %>
      <li><a href="/discussions">newest</a></li>
      <li class="active"><a href="/discussions?tab=votes">votes</a></li>
      <li><a href="/discussions?tab=comments">comments</a></li>
    <% elsif params[:tab] == "comments" %>
      <li><a href="/discussions">newest</a></li>
      <li><a href="/discussions?tab=votes">votes</a></li>
      <li class="active"><a href="/discussions?tab=comments">comments</a></li>    
    <% else %>
      <li class="active"><a href="/discussions">newest</a></li>
      <li><a href="/discussions?tab=votes">votes</a></li>
      <li><a href="/discussions?tab=comments">comments</a></li>
    <% end %>
  <% end %>
</ul>