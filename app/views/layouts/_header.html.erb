<header class="navbar navbar-fixed-top">
	<div class="navbar-inner">
    <div class="container">
 
      <!-- .btn-navbar is used as the toggle for collapsed navbar content -->
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>

      <!-- Be sure to leave the brand out there if you want it shown -->
      <%= link_to "Courigin", root_path, id: "logo" %>

      <!-- Everything you want hidden at 940px or less, place within here -->
      <div class="nav-collapse collapse">
		    <nav>
					<ul class="nav" id="top-nav">
					  <li><%= link_to "Courses",     courses_path %></li>
					  <li><%= link_to "Discussions", discussions_path %></li>
					  <li><%= link_to "Lists",       lists_path %></li>
					</ul>
          <% unless logged_in? %>
  					<ul class="nav actions">
    					<li><%= link_to "Log in",  login_path %></li>
  						<li><%= link_to "Sign up", signup_path %></li>
  					</ul>  
          <% else %>
            <ul class="nav account">
              <li id="fat-menu" class="dropdown">
                <a href="#" class="dropdown-toggle account-dropdown" data-toggle="dropdown">
                  <b class="caret"></b><%= current_user.username %>
                </a>
                <ul class="dropdown-menu">
                  <li><%= link_to "<i class='icon-user'></i> Account".html_safe, current_user %></li>
                  <li><%= link_to "<i class='icon-off'></i> Log out".html_safe, logout_path, method: "delete" %></li>
                </ul>
              </li>     
  					</ul>
            <%= render 'layouts/notifications' %>
          <% end %>
          <%= render 'layouts/search_form' %>
			  </nav>
      </div>

    </div>
	</div>
</header>